{% extends 'dashboard.html.twig' %}

{% block body %}

	<div class="container">
		<div class="page-title">
			<h3>Genres
				<a href="{{path('dashboard_genre_add')}}" class="btn btn-sm btn-outline-primary float-end">
					<i class="fas fa-plus"></i>
					Ajouter Genre</a>

			</h3>
		</div>
		<div class="box box-primary">
			<div class="box-body">
				<div id="dataTables-example_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
					<div class="row">
						<div class="col-sm-12">
							<table width="100%" class="table table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
								<thead>
									<tr role="row">
										<th>id</th>
										<th>Nom</th>
										<th></th>
									</tr>
								</thead>
								<tbody>
									{% for genre in genreList %}
										<tr class="odd">
											<td>{{genre.id}}</td>
											<td>{{genre.nom}}</td>
											<td class="text-end">
												<a href="{{path('dashboard_genre_edit',{id:genre.id})}}" class="btn btn-outline-info btn-rounded">
													<i class="fas fa-pen"></i>
												</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</tbody>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>{% endblock %}
