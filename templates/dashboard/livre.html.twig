{% extends 'dashboard.html.twig' %}

{% block body %}

	<div class="container">
		<div class="page-title">
			<h3>Livres
				<a href="{{path('dashboard_livre_add')}}" class="btn btn-sm btn-outline-primary float-end">
					<i class="fas fa-plus"></i>
					Ajouter Livre</a>
			</h3>
		</div>
		<div class="box box-primary">
			<div class="box-body">
				<div id="dataTables-example_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
					<div class="row">
						<div class="col-sm-12">
							<table width="100%" class="table table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
								<thead>
									<tr role="row">
										<th></th>
										<th>ISBN</th>
										<th>Titre</th>
										<th>Nombre pages</th>
										<th>Date de parution</th>
										<th>Note</th>
										<th></th>
									</tr>
								</thead>
								<tbody>

									{% for livre in livreList %}

										<tr class="odd">
											<td width="40px">
												<img width="40px" height="50px" src="{{livre.image}}" alt="">
											</td>
											<td>{{livre.isbn}}</td>
											<td>{{livre.titre}}</td>
											<td>{{livre.nombre_pages}}</td>
											<td>{{livre.date_de_parution|date("m/d/Y")}}</td>
											<td>{{livre.note}}</td>
											<td class="text-end">
												<a href="{{path('dashboard_livre_edit',{id:livre.id})}}" class="btn btn-outline-info btn-rounded">
													<i class="fas fa-pen"></i>
												</a>

											</td>
										</tr>

									{% endfor %}


								</tbody>
							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>{% endblock %}
