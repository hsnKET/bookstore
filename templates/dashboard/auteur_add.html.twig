{% extends "dashboard.html.twig" %}


{% block body %}

	<div class="content">
		<div class="container">
			<div class="page-title">
				<h3>Auteur</h3>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div
							class="card-header">
							<!-- Title -->
							{{formTitle}}
						</div>
						<div class="card-body">
							{{form_start(formAuteur)}}

							<div class="mb-3 row">
								<label class="col-sm-2 form-label" for="nom">Nom &amp; Prenom</label>
								<div class="col-sm-10">
									{{form_widget(formAuteur.nom_prenom)}}
									<div class="invalid-feedback" style="display:block">
										{{form_errors(formAuteur.nom_prenom)}}
									</div>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 form-label" for="prenom">Sexe</label>
								<div class="col-sm-10">
									{{form_widget(formAuteur.sexe)}}
									<div class="invalid-feedback" style="display:block">
										{{form_errors(formAuteur.nationalite)}}
									</div>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 form-label" for="nationalite">Nationalite</label>
								<div class="col-sm-10">
									{{form_widget(formAuteur.nationalite)}}
									<div class="invalid-feedback" style="display:block">
										{{form_errors(formAuteur.nationalite)}}
									</div>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2">Date de naissance</label>
								<div class="col-sm-10 select">
									{{form_widget(formAuteur.date_de_naissance)}}
									<div class="invalid-feedback" style="display:block">
										{{form_errors(formAuteur.date_de_naissance)}}
									</div>
								</div>
							</div>
							<div class="mb-3 row">
								<div class="col-2 offset-2">
									<input type="submit" value="{{formTitle}}" class="btn btn-primary">

								</div>
								{% if (formTitle != 'Ajouter') %}
									<div class="col-2">
										<a href="{{path('dashboard_auteur_delete',{id:auteurModel.id})}}">
											<input type="button" value="Supprimer" class="btn btn-danger mr-4">
										</a>
									</div>
								{% endif %}

							</div>
							{{form_end(formAuteur)}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
