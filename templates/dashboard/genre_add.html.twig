{% extends "dashboard.html.twig" %}

{% block body %}


	<div class="content">
		<div class="container">
			<div class="page-title">
				<h3>Genre</h3>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div
							class="card-header">
							<!-- Title -->
							{{formTitle}}
						</div>
						<div class="card-body">
							{{form_start(formGenre)}}
							<div class="mb-3 row">
								<label class="col-sm-2 form-label" for="nom">Nom</label>
								<div class="col-sm-10">
									{{form_widget(formGenre.nom)}}
									<div class="invalid-feedback" style="display:block">
										{{form_errors(formGenre.nom)}}
									</div>
								</div>
							</div>

							<div class="mb-3 row">
								<div class="col-2 offset-2">
									<input type="submit" value="{{formTitle}}" class="btn btn-primary">
								</div>
								{% if (formTitle != 'Ajouter') %}
									<div class="col-2">
										<a href="{{path('dashboard_genre_delete',{id:genreModel.id})}}">
											<input type="button" value="Supprimer" class="btn btn-danger mr-4">
										</a>
									</div>
								{% endif %}

							</div>
							{{form_end(formGenre)}}

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
